<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/visitingCard.css">
</head>
<body>
<div class="mobile-container">
    <!-- Header -->
    <div class="header">
        <button class="back-btn" onclick="window.location.href='/admin/visiting-cards/list'">
            â† Back
        </button>
        <h1>ğŸ“‡ Card Scanner</h1>
        <div class="menu-btn">â‹®</div>
    </div>

    <div class="upload-section">
        <!-- OCR Provider Selection -->
        <div class="ocr-selection-box">
            <h3>ğŸ” OCR Provider</h3>
            <p class="ocr-description">Choose how to extract text from card</p>
            <div class="ocr-options">
                <label class="ocr-option">
                    <input type="radio" name="ocrProvider" value="local" checked>
                    <div class="option-content">
                        <span class="option-icon">ğŸ’»</span>
                        <div class="option-details">
                            <strong>Local (Tesseract)</strong>
                            <small>Free â€¢ Good accuracy â€¢ Slower</small>
                        </div>
                    </div>
                </label>

                <label class="ocr-option">
                    <input type="radio" name="ocrProvider" value="aws">
                    <div class="option-content">
                        <span class="option-icon">â˜ï¸</span>
                        <div class="option-details">
                            <strong>AWS Textract</strong>
                            <small>Paid â€¢ Excellent accuracy â€¢ Fast</small>
                        </div>
                    </div>
                </label>
            </div>
        </div>

        <!-- Success Message -->
        <div class="success-message" id="successMessage">
            âœ“ Card saved successfully!
        </div>

        <!-- Front Image Upload -->
        <div class="image-upload-container">
            <h3>Front Image <span class="required">*</span></h3>

            <!-- Upload Box -->
            <div class="upload-box" id="frontUploadBox">
                <div class="upload-icon">ğŸ“·</div>
                <p>Tap to upload or capture</p>
                <span class="upload-hint">Front side of visiting card</span>
            </div>

            <!-- Preview -->
            <div class="preview-box" id="frontPreview" style="display: none;">
                <img id="frontPreviewImg" alt="Front Preview">
                <button class="remove-btn" onclick="removeFrontImage()">âœ•</button>
            </div>

            <!-- Hidden File Input -->
            <input type="file" id="frontImageInput" accept="image/*" style="display: none;">

            <!-- Camera Button -->
            <button class="camera-btn" onclick="currentCameraMode='front'; openCamera();">
                ğŸ“¸ Open Camera
            </button>
        </div>

        <!-- Rear Image Upload -->
        <div class="image-upload-container">
            <h3>Rear Image <span class="optional">(Optional)</span></h3>

            <!-- Upload Box -->
            <div class="upload-box" id="rearUploadBox">
                <div class="upload-icon">ğŸ“·</div>
                <p>Tap to upload or capture</p>
                <span class="upload-hint">Back side of visiting card</span>
            </div>

            <!-- Preview -->
            <div class="preview-box" id="rearPreview" style="display: none;">
                <img id="rearPreviewImg" alt="Rear Preview">
                <button class="remove-btn" onclick="removeRearImage()">âœ•</button>
            </div>

            <!-- Hidden File Input -->
            <input type="file" id="rearImageInput" accept="image/*" style="display: none;">

            <!-- Camera Button -->
            <button class="camera-btn" onclick="currentCameraMode='rear'; openCamera();">
                ğŸ“¸ Open Camera
            </button>
        </div>

        <!-- Action Buttons -->
        <div class="action-buttons" id="actionButtons" style="display: none;">
            <button class="btn btn-secondary" onclick="resetForm()">
                ğŸ”„ Reset
            </button>
            <button class="btn btn-primary" onclick="processCard()">
                ğŸš€ Process Card
            </button>
        </div>
    </div>

    <!-- Loader -->
    <div class="loader" id="loader">
        <div class="spinner"></div>
        <p>Processing card...</p>
    </div>
</div>

<!-- Camera Modal -->
<div class="modal camera-modal" id="cameraModal">
    <div class="modal-content camera-content">
        <div class="camera-header">
            <h3>ğŸ“¸ Capture Photo</h3>
            <button class="close-btn" onclick="closeCamera()">âœ•</button>
        </div>
        <div class="camera-container">
            <video id="cameraVideo" autoplay playsinline></video>
            <canvas id="cameraCanvas" style="display: none;"></canvas>
            <div class="camera-overlay">
                <div class="camera-guide"></div>
            </div>
        </div>
        <div class="camera-actions">
            <button class="btn btn-primary" onclick="capturePhoto(currentCameraMode)">
                ğŸ“· Capture
            </button>
        </div>
    </div>
</div>

<!-- View Modal -->
<div class="modal view-modal" id="viewModal">
    <div class="modal-content">
        <div class="modal-header">
            <h2>ğŸ“„ Extracted Text</h2>
            <button class="close-btn" onclick="closeViewModal()">âœ•</button>
        </div>
        <div class="modal-body">
            <!-- Front Text -->
            <div class="text-section">
                <h3>Front Side Text:</h3>
                <div class="text-box" id="frontTextBox"></div>
            </div>

            <!-- Rear Text -->
            <div class="text-section">
                <h3>Rear Side Text:</h3>
                <div class="text-box" id="rearTextBox"></div>
            </div>

            <!-- Auto-Mapped Fields -->
            <div class="mapped-section">
                <h3>âœ“ Auto-Mapped Fields</h3>
                <div class="mapped-fields" id="mappedFieldsBox"></div>
            </div>

            <!-- Action Buttons -->
            <div class="modal-actions">
                <button class="btn btn-secondary" onclick="closeViewModal()">
                    Close
                </button>
                <button class="btn btn-primary" onclick="openMappingModal()">
                    Continue to Mapping â†’
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Mapping Modal -->
<div class="modal mapping-modal" id="mappingModal">
    <div class="modal-content">
        <div class="modal-header">
            <h2>ğŸ—‚ï¸ Map Card Fields</h2>
            <button class="close-btn" onclick="closeMappingModal()">âœ•</button>
        </div>
        <div class="modal-body" id="mappingModalBody">
            <!-- Dynamic content will be inserted here -->
        </div>
    </div>
</div>

<script src="/js/visitingCard.js"></script>
</body>
</html>