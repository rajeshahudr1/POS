<!-- views/visitingCards/list.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/visitingCard.css">
</head>
<body>
<div class="mobile-container">
    <!-- Header -->
    <div class="header">
        <!--<button class="back-btn" onclick="window.location.href='/admin/dashboard'">-->
            <!--â† Back-->
        <!--</button>-->
        <h1>ğŸ“‡ My Cards</h1>
        <button class="add-btn" onclick="window.location.href='/admin/visiting-cards'">
            +
        </button>
    </div>

    <!-- Search Bar -->
    <div class="search-section">
        <form action="/admin/visiting-cards/list" method="GET" class="search-form">
            <input
                    type="text"
                    name="search"
                    placeholder="Search by name, company, email..."
                    value="<%= search %>"
                    class="search-input"
            >
            <button type="submit" class="search-btn">ğŸ”</button>
        </form>
    </div>

    <!-- Cards List -->
    <div class="cards-list">
        <% if (cards && cards.length > 0) { %>
            <% cards.forEach(card => { %>
                <div class="card-item" onclick="viewCard(<%= card.id %>)">
                    <div class="card-icon">
                        <% if (card.front_image_path) { %>
                            <img src="<%= card.front_image_path %>" alt="Card">
                        <% } else { %>
                            ğŸ‘¤
                        <% } %>
                    </div>
                    <div class="card-info">
                        <h3><%= card.full_name || 'No Name' %></h3>
                        <p class="designation"><%= card.designation || '' %></p>
                        <p class="company"><%= card.company_name || '' %></p>
                        <div class="contact-info">
                            <% if (card.primary_phone) { %>
                                <span>ğŸ“ <%= card.primary_phone %></span>
                            <% } %>
                            <% if (card.primary_email) { %>
                                <span>ğŸ“§ <%= card.primary_email %></span>
                            <% } %>
                        </div>
                    </div>
                    <div class="card-actions">
                        <button class="action-btn" onclick="event.stopPropagation(); editCard(<%= card.id %>)">
                            âœï¸
                        </button>
                        <button class="action-btn delete" onclick="event.stopPropagation(); deleteCard(<%= card.id %>)">
                            ğŸ—‘ï¸
                        </button>
                    </div>
                </div>
            <% }); %>

            <!-- Pagination -->
            <% if (pagination.totalPages > 1) { %>
                <div class="pagination">
                    <% if (pagination.page > 1) { %>
                        <a href="?page=<%= pagination.page - 1 %>&search=<%= search %>" class="page-btn">
                            â† Prev
                        </a>
                    <% } %>

                    <span class="page-info">
                            Page <%= pagination.page %> of <%= pagination.totalPages %>
                        </span>

                    <% if (pagination.page < pagination.totalPages) { %>
                        <a href="?page=<%= pagination.page + 1 %>&search=<%= search %>" class="page-btn">
                            Next â†’
                        </a>
                    <% } %>
                </div>
            <% } %>
        <% } else { %>
            <div class="empty-state">
                <div class="empty-icon">ğŸ“‡</div>
                <h3>No cards found</h3>
                <p>Start by scanning your first visiting card</p>
                <button class="btn btn-primary" onclick="window.location.href='/admin/visiting-cards'">
                    + Add Card
                </button>
            </div>
        <% } %>
    </div>
</div>

<!-- Card Detail Modal -->
<div class="modal" id="cardDetailModal">
    <div class="modal-content">
        <div class="modal-header">
            <h2>Card Details</h2>
            <button class="modal-close" onclick="closeCardDetail()">Ã—</button>
        </div>
        <div class="modal-body" id="cardDetailBody">
            <!-- Dynamic content -->
        </div>
    </div>
</div>

<script src="/js/visitingCardList.js"></script>
</body>
</html>